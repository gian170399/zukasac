DROP TABLE IF EXISTS Producto;
create table Producto(
 idProducto int AUTO_INCREMENT primary key,
 titulo varchar(50) null,
 breveDesc varchar(200) null,
 categoria varchar(100) null,
 descripcion varchar(1000) null,
 imagen varchar(6000) null,
 precio decimal(18,2)
);
DROP TABLE IF EXISTS CarroCompras;
create table CarroCompras(
	idCarroCompras int AUTO_INCREMENT primary key,
	idProducto int,
	cantidad int
);

DROP TABLE IF EXISTS Orden;
create table Orden(
	idOrden int AUTO_INCREMENT primary key,
	fechaOrden varchar(20) null,
	fechaenvio varchar(20) null,
	totalOrden decimal(18,2) null,
	estadoOrden varchar(50) null,
	direccion varchar (100) null,
	nombreCliente varchar (80) null
);

DROP TABLE IF EXISTS Almacen;
create Table Almacen(
  idAlmacen int AUTO_INCREMENT primary key,
  nombre varchar(50) not null,
  direccion varchar(100) null
);
    
DROP TABLE IF EXISTS DetalleInventario;
create Table DetalleInventario(
  idDetalleInv int AUTO_INCREMENT primary key,
  idProducto int NOT NULL,
  idAlmacen int NOT NULL,
  cantidad int null,
  fechaEntrega varchar(20)
  );
  
DROP TABLE IF EXISTS OrdenDetalle;
create table OrdenDetalle(
   idOrdenDetalle int AUTO_INCREMENT primary key,
   idOrden int NOT NULL,
   idProducto int NOT NULL,
   cantidad int,
   precio decimal(18,2)
);

DROP TABLE IF EXISTS Usuario;
create table Usuario(
	idUsuario int AUTO_INCREMENT primary key,
	nombreUsuario varchar(100) null,
	pass varchar(100)
);


