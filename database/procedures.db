----------------------CONSULTAR TODOS LOS PRODUCTOS---------------------------------------------------------------------------------
if OBJECT_ID('SP_ConsultarProductos') is not null
drop procedure SP_ConsultarProductos
go
create procedure SP_ConsultarProductos AS Select * from Producto 
go
----------------------CONSULTAR CADA PRODUCTO POR ID---------------------------------------------------------------------------------
if OBJECT_ID('SP_ConsultarProducto') is not null
drop procedure SP_ConsultarProducto
go
create procedure SP_ConsultarProducto(
	@idProducto int
) AS 
Select * from Producto where idProducto=@idProducto
go
----------------------REGISTRAR PRODUCTO---------------------------------------------------------------------------------
if OBJECT_ID('SP_RegistrarProducto') is not null
drop procedure SP_RegistrarProducto
go
create procedure SP_RegistrarProducto(
	@titulo varchar (50),
	@breveDesc varchar(200) null,
	@categoria varchar(100) null,
	@descripcion varchar(1000) null,
	@imagen varchar(6000) null,
	@precio int
) AS 
INSERT INTO Producto VALUES (@titulo,@breveDesc,@categoria,@descripcion,@imagen,@precio)
go
--exec SP_RegistrarProducto 'Faro led delantero', 'Faro para auto subaru','Accesorios','sin obs','',200

